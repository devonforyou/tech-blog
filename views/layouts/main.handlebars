<html lang="en">

<head>
  <title>Tech Blog</title>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <base href="/" />
  <link rel="apple-touch-icon" sizes="180x180" href="./favicon/apple-touch-icon.png" />
  <link rel="icon" type="image/png" sizes="32x32" href="./favicon/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="./favicon/favicon-16x16.png" />
  <link rel="manifest" href="./favicon/site.webmanifest" />
  <link href="https://fonts.googleapis.com/css2?family=Hammersmith+One&display=swap" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/simplebar@latest/dist/simplebar.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;700&display=swap" rel="stylesheet" />
  <link href="./css/reset.css" rel="stylesheet" />
  <link href="./css/sign-in-modal.css" rel="stylesheet" />
  <link href="./css/style.css" rel="stylesheet" />
  {{! load each style in }}
  {{#each styles}}
  <link href="./css/{{this}}.css" rel="stylesheet" />
  {{/each}}
</head>

<body>
  <div>
    <header>
      <!-- NAVBAR - Always Present -->
      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
          <a class="navbar-brand font-test text-center" href="/homepage">TALK TECH</a>
        </div>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav ml-auto">
            <a class="nav-item nav-link active" role="button" href="/homepage" data-toggle="tooltip"
              data-placement="bottom" title="Homepage" id="homepage-btn">
              <!-- HOMEPAGE ICON / navigates to homepage.handlebars -->
              <i class="bi bi-house-fill navIcon" width="32px"></i>
            </a>
            {{!logic to handle login/signup buttons when the user is logged in or not}}
            {{! below block will be rendered if user is not logged in}}
            {{#unless user.isLoggedIn}}
            <a class="js-signin-modal-trigger btn btn-light login-nav-Btn" data-signin="login">Log in</a>
            <a class="js-signin-modal-trigger btn btn-light login-nav-Btn" data-signin="signup">Sign up</a>
            {{/unless}}
            {{! below block will be rendered if user is logged in}}
            {{#if user.isLoggedIn}}
            <!-- HOMEPAGE ICON / navigates to homepage.handlebars -->

            <a class="nav-item nav-link active" role="button" href="/dashboard" data-toggle="tooltip"
              data-placement="bottom" title="Dashboard" id="dashboard-btn">
              <!-- HOMEPAGE ICON / navigates to homepage.handlebars -->
              <i class="bi bi-person-circle navIcon" width="32px"></i>
            </a>
            <a class="nav-item nav-link active" role="button" id="logout-btn" href="/logout" data-toggle="tooltip"
              data-placement="bottom" title="Logout"> <i class="bi bi-box-arrow-right navIcon" width="32px"></i></a>
            <p class="nav-item " style="width:fit-content" id="user-username" aria-expanded="false"></p>

            {{/if}}
          </div>
        </div>
      </nav>
    </header>
    <main>
      <!-- MAIN CONTENT -->
      {{{body}}}
    </main>
  </div>
  <footer class="text-center text-lg-start">

    <!-- Copyright -->
    <div class="text-center p-4">
      Â© 2023 Copyright:
      <a class="text-reset fw-bold">Devon Hua</a>
    </div>
    <!-- Copyright -->
  </footer>

  {{! MODAL STUFF }}
  {{> sign-in-modal}}
</body>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="./js/sign-in-modal.js"></script>
<script src="./js/user-auth.js"></script>
<script src="./js/main.js"></script>
{{! load each script in }}
{{#each scripts}}
<script src="./js/{{this}}.js"></script>
{{/each}}

</html>